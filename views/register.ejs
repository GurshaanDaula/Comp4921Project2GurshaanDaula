<%- include('templates/header', { loggedIn, username, title: 'Register' }) %>

    <div class="glass-card mx-auto" style="max-width: 400px;">
        <h3 class="text-center shiny-text mb-4">Register</h3>
        <form method="post" action="/register" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required minlength="10">
            </div>
            <div class="mb-3">
                <label class="form-label">Profile Image</label>
                <input type="file" name="profileImage" class="form-control">
            </div>
            <button class="btn btn-primary w-100">Register</button>
        </form>
    </div>

    <%- include('templates/footer') %>
        <script src="/js/animations.js"></script>