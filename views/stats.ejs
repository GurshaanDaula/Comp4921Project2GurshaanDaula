<%- include('templates/header', { loggedIn, username, title: 'Stats' }) %>

    <div class="container py-4">
        <h2 class="shiny-text mb-4 text-center">ðŸ”¥ Most Popular Threads</h2>

        <% if (threads.length===0) { %>
            <p class="text-center text-muted">No threads yet!</p>
            <% } else { %>
                <% threads.forEach(thread=> { %>
                    <div class="glass-card p-3 mb-3 rounded">
                        <h4><a href="/threads/<%= thread.thread_id %>" class="text-light text-decoration-none">
                                <%= thread.title %>
                            </a></h4>
                        <p>
                            <%= thread.description %>
                        </p>
                        <div class="d-flex justify-content-between small text-secondary">
                            <span>Likes: <%= thread.likes %></span>
                            <span>Views: <%= thread.views %></span>
                            <span>User: <%= thread.username %></span>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>

    <%- include('templates/footer') %>